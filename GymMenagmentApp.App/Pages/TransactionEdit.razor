@inject IStringLocalizer<Resource> localizer
@page "/transactionedit/{TransactionId}"

@if (!Saved)
{
    <section>
        <h1 class="page-title marginBot30" style="margin-bottom:30px">@localizer["edit"]</h1>
        <EditForm Model="@Transaction" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">
            <div class="form-group row">
                <label for="id" class="col-sm-4 bold" style="font-weight:bold">@localizer["id"]</label>
                <label class="col-sm-3">@Transaction.Id</label>
                
                @*<InputText id="lastName" name="lastName" class="form-control col-sm-8" @bind-Value="@User.LastName" @oninput="@((e)=>{ User.LastName = (string)e.Value;})" placeholder="@localizer["lastName"]"></InputText>*@
            </div>
            <div class="form-group row">
                <label for="firstName" class="col-sm-4 bold" style="font-weight:bold">@localizer["userId"]</label>
                @*<label for="firstName" class="col-sm-3">@Trainer.FirstName</label>*@
                <InputNumber id="firstName" name="firstName" class="form-control col-sm-3" @bind-Value="@Transaction.UserId"></InputNumber>
                @*<InputText id="firstName" name="firstName" class="form-control col-sm-8" @bind-Value="@User.FirstName" @oninput="@((e)=>{ User.FirstName = (string)e.Value;})" placeholder="@localizer["firstName"]"></InputText>*@
            </div>
            <div class="form-group row">
                <label for="lastName" class="col-sm-4 bold" style="font-weight:bold">@localizer["dateTime"]</label>
                @*<label for="firstName" class="col-sm-3">@Trainer.LastName</label>*@
                <InputDate id="lastName" name="lastName" class="form-control col-sm-3" @bind-Value="@Transaction.Date"></InputDate>
                @*<InputText id="email" name="email" class="form-control col-sm-8" @bind-Value="@User.Email" @oninput="@((e)=>{ User.Email = (string)e.Value;})" placeholder="@localizer["email"]"></InputText>*@
            </div>
            <div class="form-group row">
                <label for="firstName" class="col-sm-4 bold" style="font-weight:bold">@localizer["amont"]</label>
                @*<label for="firstName" class="col-sm-3">@Trainer.FirstName</label>*@
                <InputNumber id="firstName" name="firstName" class="form-control col-sm-3" @bind-Value="@amount"></InputNumber>
                @*<InputText id="firstName" name="firstName" class="form-control col-sm-8" @bind-Value="@User.FirstName" @oninput="@((e)=>{ User.FirstName = (string)e.Value;})" placeholder="@localizer["firstName"]"></InputText>*@
            </div>
            <button typle="submit" class="btn btn-primary">@localizer["edit"]</button>
            <a class="btn btn-danger table-btn" @onclick="@DeleteUser">@localizer["delete"]</a>
            <a class="btn btn-outline-primary table-btn" @onclick="@NavigateToOverview">@localizer["back"]</a>
        </EditForm>
    </section>
}
else
{
    <div class="alert @StatusClass">@Msg</div>
}

