@page "/employeeDetail/{EmployeeId}"
@inject IStringLocalizer<Resource> localizer
@*to do dodat Details for u localizer*@
<h1 class="page-title">@localizer["detailsFor"]: @Employee.FirstName @Employee.LastName</h1>

<div class="col-12 row">
    <div class="col-12 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <img src="@imagePngDataURL" style="max-width:100%"/>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@localizer["id"]:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Id</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@localizer["firstName"]:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.FirstName</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@localizer["lastName"]:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.LastName</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@localizer["Email"]:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Email</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@localizer["phone"]:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.Phone</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">@localizer["levelOfSecurity"]:</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Employee.LevelOfSecurity</label>
                </div>
            </div>
        </div>
    </div>
</div>
